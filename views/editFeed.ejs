<%- include('./components/header') %> 
 
<div class="container">
  <h1 class="mb-4">Welcome to FaceBook</h1>
  <h5>Update your Post</h5>
  <form action=/edit-feed/<%= result._id %> method = "POST">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <textarea  name="name" id="name" value=<%= result.name %> class="form-control"> <%= result.name %> required </textarea>
        <% if (err && err.title) { %>
          <div id="emailHelp" class="form-text">
           <%= err['title'].message %> </div>
          <% } %> 
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Message</label>
        <textarea name="message" value=<%= result.message %> class="form-control" id="message"> <%= result.message %> required </textarea>
        <% if (err && err.title) { %>
          <div id="emailHelp" class="form-text">
           <%= err['title'].message %> </div>
          <% } %> 
      </div>
      
      <button type="submit" class="btn btn-info">Submit</button>
    </form>
</div>
<%- include('./components/footer') %>  
